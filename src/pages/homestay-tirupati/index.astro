---
import FooterSection from '../../components/FooterSection.astro';
import TalkComponent from '../../components/TalkComponent.astro';
import Layout from '../../layouts/Layout.astro';

const imageNumbers = [1, 3, 4, 5, 2, 6, 7, 8, 9, 10, 11, 12, 13, 15, 16, 18, 17, 19, 21, 20, 22];
---

<Layout title="Four Seasons Homestay | Homestay in tirupati">
	<section class="min-h-[60vh] lg:min-h-[90vh] bg-aboutBanner bg-cover bg-no-repeat bg-center">
        <nav class="flex justify-between items-center px-10 py-10 lg:px-24 lg:h-[20vh]">
            <a href="/">
                <img src="/fourSeasonsHomestay.jpeg" alt="Four Seasons Homestay in tirupati" class="w-32 lg:w-56 ">
            </a>
            <ul class="hidden lg:flex space-x-4 ">
                <a href="/">
                    <li class="cursor-pointer hover:text-green-600">HOME</li>
                </a>
                <a href="/homestay-tirupati">
                    <li class="cursor-pointer text-green-600">ABOUT</li>
                </a>
                <a href="/homestay-tirupati-contact">
                    <li class="cursor-pointer hover:text-green-600">CONTACT</li>
                </a>
            </ul>
            <div class="lg:hidden flex items-center">
                <button id="hamburger-icon" class="text-green-600 focus:outline-none">
                    <!-- Hamburger Icon -->
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
            <div id="mobile-menu" class="lg:hidden fixed top-0 left-0 w-full h-full backdrop-blur shadow-lg transform -translate-x-full transition-transform duration-300 ease-in-out">
                <div class="flex justify-end p-4">
                    <button id="close-menu" class="text-green-600 focus:outline-none">
                        <!-- Close Icon -->
                        <svg class="w-8 h-8 mr-5 mt-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <ul class="flex flex-col items-center text-xl justify-center h-full space-y-4">
                    <li class="bg-green-800 min-w-[200px]  text-center"><a href="/" class="block w-[100%] py-5 h-[100%] text-white font-bold">HOME</a></li>
                    <li class="bg-green-800 min-w-[200px]  text-center"><a href="/homestay-tirupati" class="block w-[100%] py-5 h-[100%] hover:text-green-600 text-orange-400 font-bold">ABOUT</a></li>
                    <li class="bg-green-800 min-w-[200px] text-center"><a href="/homestay-tirupati-contact" class="block w-[100%] py-5 h-[100%] hover:text-green-600 text-white font-bold">CONTACT</a></li>
                </ul>
            </div>			
        </nav>
		<div class=" lg:h-[70vh] flex justify-center pt-10">
			<div class="text-center space-y-6">
				<div>
					<h1 class=" text-4xl lg:text-6xl text-green-800 font-medium">HOMESTAY PHOTOS</h1>
				</div>
			</div>
		</div>
	</section>
	<section class="px-10 lg:px-24 py-20">
		<div class="flex flex-col gap-10">
			<div>
				<img src="/images/12.jpeg" alt="homestay in tirupati">
			</div>
			<div class="space-y-4 pt-10">
				<h2 class="text-4xl font-medium text-gray-800">OUR PROPERTIES</h2>
				<p class="text-gray-600">Discover the perfect stay at Four Seasons Homestay! Our accommodation offers stylish 1bhk, 2bhk, and 3bhk rooms with a spacious hall, well-equipped kitchen, dining area, attached bathrooms, bedrooms, and a common balcony. Enjoy the comfort of fully furnished rooms with LED lighting, AC in bedrooms, sofa, dining table, and a fully equipped kitchen with stove.</p>
				<p class="text-gray-600">There are nearby veg restaurants like PS4 and The Peach Door, and non-veg delights at Tabun and Biryaniwala.
					With convenient access to both public and private transport, ? We offer private vehicles for rent along with driver Your perfect getaway starts here at Four Seasons Homestay!</p>
			</div>
		</div>
		<div class="columns-2 lg:columns-4 gap-4 space-y-4 py-10">
            {imageNumbers.map((number) => (
            <div class="h-min w-full">
                <img 
                  src={`/images/${number}.jpeg`} 
                  alt="homestay tirupati"
                />
             </div>
              ))}
    </div>
	</section>
	<TalkComponent />
	<FooterSection />
</Layout>

